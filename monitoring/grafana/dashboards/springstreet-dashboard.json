{
  "dashboard": {
    "id": null,
    "title": "Spring Street API Dashboard",
    "tags": ["springstreet", "api", "backend"],
    "style": "dark",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}} ({{status_code}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (p95, p99)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Status Codes",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"2..\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}} Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"4..\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}} Client Error",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) by (status_code)",
            "legendFormat": "{{status_code}} Server Error",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "reqps"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Total HTTP Requests",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[1h]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      },
      {
        "id": 5,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status_code=~\"5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2
          }
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "db_connections_idle",
            "legendFormat": "Idle",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Database Query Duration",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 {{operation}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 {{operation}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Duration"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 8,
        "title": "Authentication Attempts",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(auth_attempts_total{status=\"success\"}[5m])",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "rate(auth_attempts_total{status=\"failure\"}[5m])",
            "legendFormat": "Failure",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Attempts/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 9,
        "title": "Business Metrics",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(investment_inquiries_total[5m])",
            "legendFormat": "Investment Inquiries",
            "refId": "A"
          },
          {
            "expr": "rate(contact_submissions_total[5m])",
            "legendFormat": "Contact Submissions",
            "refId": "B"
          },
          {
            "expr": "rate(otp_generated_total[5m])",
            "legendFormat": "OTP Generated ({{method}})",
            "refId": "C"
          },
          {
            "expr": "rate(otp_verified_total{status=\"success\"}[5m])",
            "legendFormat": "OTP Verified Success",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Rate"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 10,
        "title": "HTTP Request Size",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_size_bytes_bucket[5m]))",
            "legendFormat": "p95 Request Size",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_response_size_bytes_bucket[5m]))",
            "legendFormat": "p95 Response Size",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "bytes",
            "label": "Size"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 11,
        "title": "Database Query Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        },
        "targets": [
          {
            "expr": "rate(db_queries_total[5m])",
            "legendFormat": "{{operation}} ({{status}})",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Queries/sec"
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
}

